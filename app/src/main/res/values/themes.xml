<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockSupportTool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EditTextStyle">
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_white</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="viewStyle">
        <item name="android:background">@drawable/bg_surround_black</item>
    </style>
    <style name="viewBarStyle">
        <item name="android:background">@color/black</item>
    </style>
    <style name="viewBar2Style">
        <item name="android:background">@color/white</item>
    </style>
    <style name="TextViewStyle2">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>